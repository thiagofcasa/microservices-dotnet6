{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Routes": [
    //Configuração para o FindAll(GET) da Controller da ProductAPI
    {
      //"ProductAPI": "https://localhost:4440",
      "DownstreamPathTemplate": "/api/v1/product",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 4440
        }
      ],
      //Caminho da controller da ProductAPI
      "UpstreamPathTemplate": "/api/v1/product",
      //O verbo get
      "UpstreamHttpMethod": [ "GET" ]
    },
    //Configuração para o FindById(GET) da Controller da ProductAPI
    {
      "DownstreamPathTemplate": "/api/v1/product/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 4440
        }
      ],
      //Caminho da controller da ProductAPI
      "UpstreamPathTemplate": "/api/v1/product/{id}",
      //O verbo get
      "UpstreamHttpMethod": [ "GET" ],
      //Configurações de autenticação. (informações encontradas na Program da ProductAPI
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "geek_shopping" ]
      }
    },

    //Configuração para o Update(PUT) e o Create(POST) da Controller da ProductAPI,
    // ambos são bem similares mudando apenas o verbo
    {
      "DownstreamPathTemplate": "/api/v1/product",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 4440
        }
      ],
      //Caminho da controller da ProductAPI
      "UpstreamPathTemplate": "/api/v1/product",
      //O verbo get
      "UpstreamHttpMethod": [ "POST", "PUT" ],
      //Configurações de autenticação. (informações encontradas na Program da ProductAPI
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "geek_shopping" ]
      }
    },
    //Configuração para o Delete(DELETE) da Controller da ProductAPI
    {
      "DownstreamPathTemplate": "/api/v1/product/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 4440
        }
      ],
      //Caminho da controller da ProductAPI
      "UpstreamPathTemplate": "/api/v1/product/{id}",
      //O verbo get
      "UpstreamHttpMethod": [ "DELETE" ],
      //Configurações de autenticação. (informações encontradas na Program da ProductAPI
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "geek_shopping" ]
      }
    }




    //"CartAPI": "https://localhost:4445",
    //"CouponAPI": "https://localhost:4450"

  ],
  "GlobalConfiguration": {
    //onde esta o ocelot
    "BaseUrl": "https://localhost:4480"
  }

}


